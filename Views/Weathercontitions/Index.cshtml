@model IEnumerable<WEB_GAME.Models.WeatherConditionViewModel>

@{
    ViewData["Title"] = "Weather Conditions";
}

<h1>Weather Conditions</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar..." />
        <button type="submit" class="btn btn-default">Buscar</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().typeWeather)</th>
            <th>@Html.DisplayNameFor(model => model.First().description)</th>
            <th>@Html.DisplayNameFor(model => model.First().active)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.typeWeather)</td>
                <td>@Html.DisplayFor(modelItem => item.description)</td>
                <td>@Html.DisplayFor(modelItem => item.active)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.weatherContitionId })" class="btn btn-secondary">Edit</a> |
                    <a href="@Url.Action("Deactivate", new { id = item.weatherContitionId })" class="btn btn-danger">Deactivate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
