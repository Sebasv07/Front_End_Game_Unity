@model WEB_GAME.Models.WeatherConditionViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Weather Condition</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Create Weather Condition</h1>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="weatherContitionId" class="control-label" readonly style="display: none;"></label>
                <input asp-for="weatherContitionId" class="form-control" value="0" style="display: none;" />
                <span asp-validation-for="weatherContitionId" class="text-danger" style="display: none;"></span>
            </div>
            <div class="form-group">
                <label asp-for="typeWeather" class="control-label"></label>
                <input asp-for="typeWeather" class="form-control" />
                <span asp-validation-for="typeWeather" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <input asp-for="active" type="hidden" value="true" />
            <div class="form-group">
                <a href="@Url.Action("Index", "WeatherConditions")" class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
